{
  "dashboard": {
    "title": "DevOps SRE Platform - DORA Metrics",
    "uid": "devops-dora-metrics",
    "timezone": "utc",
    "refresh": "30s",
    "panels": [
      {
        "title": "Deployment Frequency (per day)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "deployment_frequency_per_day{environment=\"production\"}",
            "legendFormat": "Deploys/day"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "orange", "value": 0.14 },
                { "color": "yellow", "value": 0.5 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "title": "Change Failure Rate (%)",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "change_failure_rate{environment=\"production\"}",
            "legendFormat": "CFR %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 15 },
                { "color": "orange", "value": 30 },
                { "color": "red", "value": 46 }
              ]
            }
          }
        }
      },
      {
        "title": "Mean Time to Recovery (MTTR)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(incident_mttr_seconds_bucket[24h])) / 3600",
            "legendFormat": "MTTR (hours)"
          }
        ]
      },
      {
        "title": "Request Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (status_code)",
            "legendFormat": "{{status_code}}"
          }
        ]
      },
      {
        "title": "P95 Latency",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "title": "Active Incidents by Severity",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 14 },
        "targets": [
          {
            "expr": "sum(incidents_total{status!=\"resolved\"}) by (severity)",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "title": "Deployments (Last 24h)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 14 },
        "targets": [
          {
            "expr": "sum(increase(deployments_total[24h])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 14 },
        "targets": [
          {
            "expr": "1 - (sum(rate(http_requests_total{status_code=~\"5..\"}[30d])) / sum(rate(http_requests_total[30d])))",
            "legendFormat": "Availability"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0.99 },
                { "color": "yellow", "value": 0.995 },
                { "color": "green", "value": 0.999 }
              ]
            }
          }
        }
      }
    ]
  }
}
